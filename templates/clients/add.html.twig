  <div class="form-group">
    <label for="vehiculeModele" class="col-form-label">Modele du véhicule</label>
    <div class="col-sm-10">
      <input type="text" name="vehiculeModele" class="form-control" id="vehiculeModele" placeholder="Saisissez le modele du véhicule">
    </div>
  </div>
  </div>

